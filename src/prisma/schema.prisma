datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int       @id @default(autoincrement())
    email     String    @unique
    username  String    @unique
    password  String
    createdAt DateTime  @default(now())

    ratings   Rating[]
}

model Rating {
    id         Int      @id @default(autoincrement())
    userId     Int
    entityId   String    // Last.fm ID or unique name
    entityType EntityType
    score      Int
    createdAt  DateTime @default(now())

    user       User     @relation(fields: [userId], references: [id])

    // Prevent user from rating the same entity twice
    @@unique([userId, entityId, entityType])
}

// Enum representing rating target type
enum EntityType {
    song
    album
    artist
}
